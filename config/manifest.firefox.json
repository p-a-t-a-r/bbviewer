{
    "name": "BigBooruViewer",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "A full-screen image viewer for multiple boorus that puts the art front and center.",
    "permissions": [
        "*://e621.net/*",
        "tabs",
        "cookies"
    ],
    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "page_action": {
        "browser_style": true,
        "default_icon": {
            "19": "images/icon-flat-19.png",
            "38": "images/icon-flat-38.png"
        },
        "default_title": "View in BigBooruViewer"
    }
}
